<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="false">

    <display-name>YOLOMusic Backend</display-name>
    <description>音乐后台管理系统</description>

    <session-config>
        <session-timeout>30</session-timeout> <!-- 30分钟 -->
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- 开发环境 -->
            <!-- 对于Chrome 80+，需要注释掉same-site或设置为None -->
            <!-- <same-site>None</same-site> -->
        </cookie-config>
    </session-config>
    <!-- 2. 字符编码过滤器 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.yolomusic.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ========== Servlet配置 ========== -->
    <!-- 显式配置所有Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MusicServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.MusicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MusicServlet</servlet-name>
        <url-pattern>/api/music/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/user/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlaylistServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.PlaylistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaylistServlet</servlet-name>
        <url-pattern>/api/playlist/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/api/dashboard/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OperationLogServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.OperationLogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OperationLogServlet</servlet-name>
        <url-pattern>/api/log/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.yolomusic.servlet.FileUploadServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <max-request-size>52428800</max-request-size>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/api/upload</url-pattern>
    </servlet-mapping>

    <!-- 默认欢迎页面 -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>